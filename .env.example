# SteamGridDB API Key (Required for images)
STEAMGRIDDB_API_KEY=your_steamgriddb_key_here

# ScreenScraper API Credentials (Optional - for retro game data)
# Register at https://www.screenscraper.fr/
# Request developer credentials at https://www.screenscraper.fr/forumsujets.php?frub=12&numpage=0
SCREENSCRAPER_DEV_ID=your_dev_id_here
SCREENSCRAPER_DEV_PASSWORD=your_dev_password_here

# ScreenScraper User Credentials (Optional - provides higher API quota)
SCREENSCRAPER_USER_ID=your_username_here
SCREENSCRAPER_USER_PASSWORD=your_password_here

# Software Name (Optional - identifies your application)
SCREENSCRAPER_SOFTWARE_NAME=game-encyclopedia-mcp-server
